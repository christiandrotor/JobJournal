<Application x:Class="JobJournal.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:JobJournal"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--Button style-->
        <Style x:Key="button">
            <Setter Property="Button.Background" Value="MistyRose"/>
            <Setter Property="Button.Width" Value="50"/>
        </Style>

        <Style x:Key="fields">
            <Setter Property="TextBox.HorizontalAlignment" Value="Right"/>
            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
            <!--<Setter Property="TextBox.Padding" Value="0,10,10,0"/>-->
        </Style>
    </Application.Resources>
</Application>
